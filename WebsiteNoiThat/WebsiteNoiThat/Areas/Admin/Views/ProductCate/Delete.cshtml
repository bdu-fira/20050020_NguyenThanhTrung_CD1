@model Models.EF.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Category</h2>

<div>
    <h3>Are you sure you want to delete the category "<strong>@Model.Name</strong>"?</h3>
</div>

@using (Html.BeginForm("Delete", "ProductCate", new { id = Model.CategoryId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        <input type="submit" value="Yes, Delete" class="btn btn-danger" />
        <a href="@Url.Action("Show", "ProductCate")" class="btn btn-secondary">Cancel</a>
    </div>
}
