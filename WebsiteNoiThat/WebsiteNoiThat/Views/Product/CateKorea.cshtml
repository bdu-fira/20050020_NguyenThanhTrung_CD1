
@model List<Models.EF.Product>
<h3 id="title_spmoi">RAM</h3>
<div class="ct-boxmain row m0">
    @{
        int i = 0;
    }
    @foreach (var sp in Model)
    {
        i++; // Đếm số lượng sản phẩm

        <div class="col-xs-6 col-sm-4 col-md-3 p5">
            <div class="boxsp">
                <div class="imgsp">
                    <!-- Liên kết đến trang chi tiết sản phẩm -->
                    <a href="@Url.Action("DetailProduct", new { @Id = sp.ProductId })" data-toggle="tooltip" title="@sp.Name">
                        <img style="width:200px;height:200px;" class="imgproduct" src="@Url.Content("~/image/" + sp.Photo)" />
                    </a>
                </div>
                <div class="namesp">
                    <a href="@Url.Action("DetailProduct", new { @Id = sp.ProductId })">@sp.Name</a>
                </div>
                <div class="pricesp">
                    Giá: @sp.Price.GetValueOrDefault(0).ToString("N0")₫
                </div>
                <div class="button-hd">
                    <!-- Nút thêm vào giỏ hàng -->
                    <a href="/them-gio-hang?productid=@sp.ProductId&quantity=1">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sau mỗi 4 sản phẩm, tạo một dòng mới -->
        if (i % 4 == 0)
        {
            <div style="clear:both;"></div>
        }
    }
</div>
