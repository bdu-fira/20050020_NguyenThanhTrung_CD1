@model Models.EF.Provider

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Provider</h2>

<div>
    <h3>Are you sure you want to delete the provider "<strong>@Model.ProviderName</strong>"?</h3>
</div>

@using (Html.BeginForm("Delete", "Provider", new { id = Model.ProviderId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        <input type="submit" value="Yes, Delete" class="btn btn-danger" />
        <a href="@Url.Action("Show", "Provider")" class="btn btn-secondary">Cancel</a>
    </div>
}
